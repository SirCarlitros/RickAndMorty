<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.wear.example.ui.characters.CharacterViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background_item_character_container"
        tools:context=".ui.characters.CharacterFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_background_item_character"
            app:elevation="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                app:titleTextColor="@android:color/white"
                app:title="@string/rick_morty"
                app:titleCentered="true" />

        </com.google.android.material.appbar.AppBarLayout>


        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/fake_shimmer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_bar_layout_title"
            app:shimmer_auto_start="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/item_character_place_holder" />

                <include layout="@layout/item_character_place_holder" />

                <include layout="@layout/item_character_place_holder" />

                <include layout="@layout/item_character_place_holder" />

                <include layout="@layout/item_character_place_holder" />

                <include layout="@layout/item_character_place_holder" />

                <include layout="@layout/item_character_place_holder" />

            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeToRefresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_bar_layout_title">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_view_characters"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollY="@{viewModel.scrollState}">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_characters"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingBottom="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:itemCount="10"
                        tools:listitem="@layout/item_character" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_back_page"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_round_arrow_back_ios_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toStartOf="@+id/tv_current_page"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/recycler_view_characters"
                        app:layout_constraintWidth_percent="0.07" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_current_page"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="30dp"
                        android:gravity="center"
                        android:background="@drawable/background_place_holder"
                        android:backgroundTint="@color/color_background_item_character"
                        android:text="1"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toStartOf="@+id/iv_next_page"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toEndOf="@+id/iv_back_page"
                        app:layout_constraintTop_toBottomOf="@+id/recycler_view_characters"
                        app:layout_constraintWidth_percent="0.1" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_next_page"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_round_arrow_forward_ios_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toEndOf="@+id/tv_current_page"
                        app:layout_constraintTop_toBottomOf="@+id/recycler_view_characters"
                        app:layout_constraintWidth_percent="0.07" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
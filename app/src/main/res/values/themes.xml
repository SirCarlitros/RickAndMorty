<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FirstApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_background_item_character</item>
        <item name="colorPrimaryVariant">@color/color_background_item_character_contrast</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="myThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/architects_daughter</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/color_background_item_character</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="myThemeDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/color_background_night</item>
    </style>
</resources>